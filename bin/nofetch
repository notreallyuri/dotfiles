#!/usr/bin/env bash

LOGO_DIR="$HOME/.config/fastfetch/logos"
LOGO_NAME="${1#--}"

if [[ -n "$LOGO_NAME" && -f "$LOGO_DIR/$LOGO_NAME" ]]; then
  fastfetch --logo "$LOGO_DIR/$LOGO_NAME" --logo-type file
else
  # Only print error if user actually typed an argument
  [[ -n "$1" ]] && echo "Error: Logo '$LOGO_NAME' not found in $LOGO_DIR"

  echo "Available options:"
  find "$LOGO_DIR" -maxdepth 1 -type f -not -name '.*' -printf "  --%f\n" | sort
  exit 1
fi
